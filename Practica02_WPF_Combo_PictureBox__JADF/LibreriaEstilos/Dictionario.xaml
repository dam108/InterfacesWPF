<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >
    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="GradienteBacgroundRojo">
        <GradientStop Color="#FFDE1E1E" Offset="1"/>
        <GradientStop Color="#FFA87979"/>
        <GradientStop Color="#FF831111" Offset="0.523"/>
    </LinearGradientBrush>

    <Style TargetType="Button">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="Chocolate"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TextBox">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF26C3C3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>